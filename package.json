{
    "name": "node-red-contrib-latching-router",
    "version": "1.0.0",
    "main": "index.js",
    "keywords": [
        "node-red",
        "router",
        "latch",
        "gate"
    ],
    "dependencies": {
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@hapi/eslint-config-hapi": "13.0.2",
        "@hapi/eslint-plugin-hapi": "4.3.6",
        "babel-eslint": "10.1.0",
        "eslint": "^7.23.0",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "mocha": "^8.3.2",
        "node-red-contrib-mock-node": "^0.5.0",
        "npm-check-updates": "^11.3.0",
        "prettier": "^2.2.1"
    },
    "scripts": {
        "test": "node_modules/.bin/mocha tests/test.js",
        "update-dependencies": "./node_modules/.bin/ncu -u && npm install",
        "lint": "eslint ."
    },
    "author": "@biddster",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/biddster/node-red-contrib-latching-router.git"
    },
    "bugs": {
        "url": "https://github.com/biddster/node-red-contrib-latching-router/issues"
    },
    "node-red": {
        "nodes": {
            "latching-router": "index.js"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 96
    },
    "eslintConfig": {
        "extends": "@hapi/eslint-config-hapi",
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "script"
        },
        "overrides": [
            {
                "files": [
                    "*.js"
                ],
                "rules": {
                    "@hapi/hapi/scope-start": "off",
                    "comma-dangle": "off",
                    "brace-style": "off",
                    "strict": "off"
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint",
            "git add"
        ],
        "*.{md,html,json}": [
            "prettier --write",
            "git add"
        ]
    }
}
